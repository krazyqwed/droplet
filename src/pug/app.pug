  body
    .b_main-wrapper.js_main_wrapper
      .b_choose-wrap.js_choose-wrap.b_gui-element.js_gui_element
        .b_choose.js_choose
      .b_textbox-wrap.js_textbox_wrap.b_gui-element.js_gui_element
