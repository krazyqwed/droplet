{
  "name": "droplet",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "pull": "node ./tasks/pull.js",
    "release": "node ./tasks/release.js",
    "release:skip-tag": "node ./tasks/release.js -skip-tag",
    "make": "yarn run make:win",
    "make:win": "yarn run build && yarn run build:obfuscate && electron-packager ./dist Droplet --out ./build --platform=win32 --arch=x64 --electron-version=1.6.0 --overwrite=true",
    "build": "rimraf dist && mkdir dist && yarn run build:version && yarn run build:pug && yarn run build:sass && yarn run build:js && yarn run build:js-fallback && yarn run build:js-vendor && yarn run build:static && yarn run build:prepare",
    "start": "yarn run build && npm-run-all --parallel watch:**",
    "build:version": "node ./tasks/version.js",
    "build:prepare": "node ./tasks/build-prepare.js && cpy \"./tasks/build-prepare-main.js\" \"./dist/\" --rename=main.js",
    "build:obfuscate": "javascript-obfuscator ./dist/app.js --output ./dist/app.js",
    "build:pug": "pug -O version.json ./src/pug/index.pug --out ./dist",
    "build:sass": "node-sass ./src/scss/app.scss ./dist/app.css",
    "build:js": "cross-env NODE_ENV=production rollup -c",
    "build:js-fallback": "cross-env NODE_ENV=production rollup --config ./rollup-fallback.config.js",
    "build:js-vendor": "cpy \"./src/js/vendor/**/*\" \"./dist/vendor/\"",
    "build:static": "cpy \"./src/static/**/*\" \"./dist/static/\"",
    "watch:pug": "chokidar \"./src/pug/\" -c \"yarn run build:pug\"",
    "watch:sass": "chokidar \"./src/scss/\" -c \"yarn run build:sass\"",
    "watch:js": "chokidar \"./src/js/\" -c \"yarn run build:js\"",
    "watch:js-vendor": "chokidar \"./src/js/vendor/\" -c \"yarn run build:js-vendor\"",
    "watch:static": "chokidar \"./src/static/\" -c \"yarn run build:static\""
  },
  "license": "MIT",
  "dependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "child_process": "^1.0.2",
    "chokidar-cli": "^1.2.0",
    "conventional-recommended-bump": "^0.3.0",
    "cpy-cli": "^1.0.1",
    "cross-env": "^3.1.3",
    "git-latest-tag": "^0.0.6",
    "javascript-obfuscator": "^0.9.1",
    "node-sass": "^3.13.0",
    "npm-run-all": "^3.1.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-uglify": "^1.0.1",
    "semver": "^5.3.0",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony"
  }
}
