{
  "name": "droplet",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "pull": "node ./tasks/pull.js",
    "release": "node ./tasks/release.js",
    "release:skip-tag": "node ./tasks/release.js -skip-tag",
    "make": "npm run make:win",
    "make:win": "npm run build && npm run build:obfuscate && electron-packager ./dist Droplet --out ./build --platform=win32 --arch=x64 --electron-version=1.6.0 --overwrite=true",
    "build": "rimraf dist && mkdir dist && npm run build:version && npm run build:pug && npm run build:sass && npm run build:js && npm run build:js-fallback && npm run build:js-vendor && npm run build:static && npm run build:prepare",
    "start": "npm run build && npm-run-all --parallel watch:**",
    "build:version": "node ./tasks/version.js",
    "build:prepare": "node ./tasks/build-prepare.js && cpy \"./tasks/build-prepare-main.js\" \"./dist/\" --rename=main.js",
    "build:obfuscate": "javascript-obfuscator ./dist/app.js --output ./dist/app.js",
    "build:pug": "pug -O version.json ./src/pug/index.pug --out ./dist",
    "build:sass": "node-sass ./src/scss/app.scss ./dist/app.css",
    "build:js": "cross-env NODE_ENV=production rollup -c",
    "build:js-fallback": "cross-env NODE_ENV=production rollup --config ./rollup-fallback.config.js",
    "build:js-vendor": "cpy \"./src/js/vendor/**/*\" \"./dist/vendor/\"",
    "build:static": "ncp \"./src/static\" \"./dist/static\"",
    "watch:pug": "chokidar \"./src/pug/\" -c \"npm run build:pug\"",
    "watch:sass": "chokidar \"./src/scss/\" -c \"npm run build:sass\"",
    "watch:js": "chokidar \"./src/js/\" -c \"npm run build:js\"",
    "watch:js-vendor": "chokidar \"./src/js/vendor/\" -c \"npm run build:js-vendor\"",
    "watch:static": "chokidar \"./src/static/\" -c \"npm run build:static\""
  },
  "license": "MIT",
  "dependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "child_process": "^1.0.2",
    "chokidar-cli": "^1.2.0",
    "conventional-recommended-bump": "^1.0.0",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.0.1",
    "git-latest-semver-tag": "^1.0.2",
    "javascript-obfuscator": "^0.9.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-uglify": "^2.0.1",
    "semver": "^5.3.0",
    "uglify-es": "^3.0.15"
  },
  "engines": {
    "node": "~8.1.0",
    "npm": "~5.0.3"
  }
}
